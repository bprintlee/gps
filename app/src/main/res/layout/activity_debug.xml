<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card_background">

        <!-- 第一行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="刷新"
                android:textColor="@color/white"
                android:background="@color/primary_color" />

            <Button
                android:id="@+id/createTestLogButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="创建测试日志"
                android:textColor="@color/white"
                android:background="@color/teal_700" />

        </LinearLayout>

        <!-- 第二行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearLogsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="清空日志"
                android:textColor="@color/white"
                android:background="@color/error_color" />

            <Button
                android:id="@+id/exportLogButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="导出日志"
                android:textColor="@color/white"
                android:background="@color/success_color" />

        </LinearLayout>

    </LinearLayout>

    <!-- 日志文件列表 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 日志列表标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="崩溃日志文件列表"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- 日志文件列表 -->
            <TextView
                android:id="@+id/logListText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@color/card_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- 日志内容标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日志内容"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- 日志内容显示 -->
            <TextView
                android:id="@+id/logContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择要查看的日志文件"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@color/card_background"
                android:padding="12dp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
