<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="调试信息"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- 第一行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="刷新"
                android:textColor="@color/white"
                android:background="@color/primary_color" />

            <Button
                android:id="@+id/createTestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="创建测试日志"
                android:textColor="@color/white"
                android:background="@color/teal_700" />

        </LinearLayout>

        <!-- 第二行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/copyLogsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="复制日志"
                android:textColor="@color/white"
                android:background="@color/success_color" />

            <Button
                android:id="@+id/viewRuntimeLogsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="查看运行时日志"
                android:textColor="@color/white"
                android:background="@color/teal_700" />

        </LinearLayout>

        <!-- 第三行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectAllButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="全选内容"
                android:textColor="@color/white"
                android:background="@color/primary_color" />

            <Button
                android:id="@+id/clearContentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="清空内容"
                android:textColor="@color/white"
                android:background="@color/error_color" />

        </LinearLayout>

    </LinearLayout>

    <!-- 日志文件列表 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="崩溃日志文件列表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/card_background"
        android:padding="12dp">

        <EditText
            android:id="@+id/logListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:selectAllOnFocus="true"
            android:hint="崩溃日志文件列表将显示在这里，您可以自由选择和复制" />

    </ScrollView>

    <!-- 日志内容 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日志内容"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/card_background"
        android:padding="12dp">

        <EditText
            android:id="@+id/logContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择要查看的日志文件"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:selectAllOnFocus="true"
            android:hint="日志内容将显示在这里，您可以自由选择和复制" />

    </ScrollView>

</LinearLayout>
